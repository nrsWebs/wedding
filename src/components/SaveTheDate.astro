---
import flecha from '../assets/flecha-hacia-arriba.png';
import corazones from '../assets/corazones.png';
---

<div id="container">
	<main>
		<section class="heart-container">
			<article class="montaje">
				<img src={flecha.src} alt="heart" class="flecha-izq"/>
				<img src={corazones.src} alt="heart" class="heart"/>
				<img src={flecha.src} alt="heart" class="flecha-dch"/>
			</article>
		</section>
		<section class="save-date">
			<article class="date-container">
				<h1>Save <br /> the <br/> Date!</h1>
				<div class="vertical-line"></div>
				<p class="date">
					01 <br /> 11 <br /> 25
				</p>
			</article>
			<article class="names-container">
				<p class="names">Alba & <br /> Cristian</p>
			</article>
		</section>
		<section class="heart-container">
			<article class="montaje">
				<img src={flecha.src} alt="heart" class="flecha-izq"/>
				<img src={corazones.src} alt="heart" class="heart"/>
				<img src={flecha.src} alt="heart" class="flecha-dch"/>
			</article>
		</section>
	</main>
</div>

<style lang="less">

	#container {
		height: 100%;
		color:#fff
	}

	.heart-container {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 20vh;
		.montaje {
			display: flex;
			justify-content: center;
			align-items: center;
			position: relative;
			opacity: 0.3;
			max-width: 15%;
			img{
				max-width: 100%;
				max-height: 100%;
			}
			.flecha-izq {
				rotate: -90deg;
			}

			.flecha-dch {
				rotate: 90deg;
			}

			.heart{
				position: absolute
			}
		}
	}

	



	.save-date {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-around;
		height: 60vh;
		.date-container {
			display: flex;
			flex-direction: row;
			justify-content: space-around;
			align-items: center;
			width: 100%;
			> * {
				flex: 1 1 0;
				text-align: center;
			}
			h1 {
				font-size: 36px;
				color:#fff;
				font-family: 'BetterSaturday', sans-serif;
			}			
			.date{
				font-size: 46px;
				font-family: 'NotoSerifDisplay-Regular', sans-serif;
			}
			.vertical-line {
				border-left: 0.7px solid #fff;
				height: 100%;
				max-width: 0.7px;
			}
		}
		.names-container {
			.names {
				font-size: 46px;
				font-family: 'AnticDidone', sans-serif;
			}
		}
	}
	

	@media screen and (min-height: 426px) {
		
	}

	@media screen and (min-width: 769px) {
		
	}

	@media screen and (min-width: 1440px) {
		
	}
</style>
